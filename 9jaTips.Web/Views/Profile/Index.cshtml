@model AppUser
@inject UserManager<AppUser> userManager
@inject IFixtures _fixture

@{
    ViewData["Title"] = "Profile Page";
    var user = await userManager.FindByIdAsync(Model.Id);
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6">
                                <img src="https://via.placeholder.com/150" style="border-radius: 50%; width: 100%" asp-append-version="true" />
                            </div>
                        </div>
                        <h4 class="card-title">Ogbara Gerrald</h4>
                        <p>#@Model.UserName.Split("@")[0]</p>
                    </div>
                    <div class="col-md-4">
                        <a class="btn btn-primary text-light float-right">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title">Streak</h4>

                <span class="bg-success">W</span>
                <span class="bg-success">W</span>
                <span class="bg-success">W</span>
                <span class="bg-success">W</span>
                <span class="bg-success">W</span>
                <span class="bg-success">W</span>
                <span class="bg-success">W</span>
                <span class="bg-success">W</span>
                <span class="bg-success">W</span>
                <span class="bg-success">W</span>
                <span class="bg-success">W</span>
                <span class="bg-success">W</span>
                <span class="bg-success">W</span>
                <span class="bg-success">W</span>
                <span class="bg-success">W</span>
                <span class="bg-success">W</span>

            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title">Summary</h4>
                <div class="row">
                    <div class="col-md-3">
                        <h5>Posts</h5>
                        <span>99+</span>
                    </div>
                    <div class="col-md-3">
                        <h5>Wins</h5>
                        <span>99+</span>
                    </div>
                    <div class="col-md-3">
                        <h5>Losses</h5>
                        <span>99+</span>
                    </div>
                    <div class="col-md-3">
                        <h5>Streak</h5>
                        <span>99+</span>
                    </div>
                </div>
            </div>
        </div>

        @foreach (var post in Model.Posts)
        {
            <div class="card py-2">
                <div class="row">
                    <div class="col-md-2">
                        <img src="https://via.placeholder.com/150" style="border-radius: 50%; width: 100%" asp-append-version="true" />
                    </div>
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-5">
                                <a asp-controller="Profile" asp-action="Index" asp-route-id="@Model.Id"> @user.UserName.Split('@')[0]</a>
                            </div>
                            <div class="col-md-7 float-right px-1">
                                <span class="bg-success">W</span>
                                <span class="bg-success">W</span>
                                <span class="bg-success">W</span>
                                <span class="bg-success">W</span>
                                <span class="bg-success">W</span>
                                <span class="bg-success">W</span>
                                <span class="bg-success">W</span>
                                <span class="bg-success">W</span>
                            </div>
                        </div>
                        <div class="row">
                            <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id">
                                <div class="col-md-12">
                                    <div class="py-2">
                                        <p class="mb-0">@_fixture.GetMatchById(post.MatchId).Home vs @_fixture.GetMatchById(post.MatchId).Home #@post.Tip</p>
                                        <p>@_fixture.GetMatchById(post.MatchId).League in @_fixture.GetMatchById(post.MatchId).Country</p>
                                    </div>
                                    <p class="mb-0">@post.Thoughts</p>
                                    <span style="font-size: 12px">@post.PostDate</span>
                                </div>
                            </a>
                        </div>
                        <hr />
                        <div class="row">
                            <form method="post" style="width: 100%">
                                <div class="row">
                                    <div class="col-sm-3 col-md-3">
                                        <a data-toggle="modal" data-target="#exampleModal">
                                            <i class="fa fa-comment" id="@post.Id" onclick="loadData(event)"></i>
                                        </a>
                                    </div>
                                    <div class="col-sm-3 col-md-3">
                                        <a><i class="fa fa-heart"></i></a>
                                    </div>
                                    <div class="col-sm-3 col-md-3">
                                        <a><i class="fa fa-facebook"></i></a>
                                    </div>
                                    <div class="col-sm-3 col-md-3">
                                        <a><i class="fa fa-twitter"></i></a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>