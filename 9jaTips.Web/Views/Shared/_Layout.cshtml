@inject SignInManager<AppUser> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _9jaTips.Web</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @*<div style="height:100%;" id="topper">*@
    <header id="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-danger" asp-area="" asp-controller="Home" asp-action="Index">_9jaTips.Web</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link hidden-link" asp-area="" asp-controller="Misc" asp-action="TrendingLeagues">Leagues</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link hidden-link" asp-area="" asp-controller="Misc" asp-action="Table">Table</a>
                        </li>

                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form class="nav-link py-0" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="nav-link border-0 text-center text-light pt-1 logout" style="width: 100%;background:none;font-weight:bold">Logout</button>
                                </form>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Post" asp-action="Countries">Post</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Profile" asp-action="Index" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)"><i class="fa fa-user"></i> @User.FindFirstValue(ClaimTypes.Name).Split('@')[0]</a>

                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }



                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid" id="fluid">
        <main role="main" class="pb-3">

            <div class="row">
                <div class="col-lg-3" id="leagues">
                    <div class="card">
                        <div class="card-header h5">
                            Leagues
                        </div>
                        <div class="card-body">
                            <ul class="list-group">
                                <li class="list-group-item"><a asp-controller="Post" asp-action="FilterPost" asp-route-country="England">EPL</a></li>
                                <li class="list-group-item"><a asp-controller="Post" asp-action="FilterPost" asp-route-country="Spain">La Liga</a></li>
                                <li class="list-group-item"><a asp-controller="Post" asp-action="FilterPost" asp-route-country="Germany">Bundesliga</a></li>
                                <li class="list-group-item"><a asp-controller="Post" asp-action="FilterPost" asp-route-country="Netherland">Eredivisie</a></li>
                                <li class="list-group-item"><a asp-controller="Post" asp-action="FilterPost" asp-route-country="Italy">Serie A</a></li>
                                <li class="list-group-item"><a asp-controller="Post" asp-action="FilterPost" asp-route-country="France">Ligue 1</a></li>
                                <li class="list-group-item"><a asp-controller="Post" asp-action="FilterPost" asp-route-country="Nigeria">NPFL</a></li>
                                <li class="list-group-item"><a asp-controller="Post" asp-action="FilterPost" asp-route-country="South Africa">ABSA</a></li>
                                <li class="list-group-item"><a asp-controller="Post" asp-action="FilterPost" asp-route-country="Belgium">Super League</a></li>
                                <li class="list-group-item"><a asp-controller="Post" asp-action="FilterPost" asp-route-country="International">Champions League</a></li>
                                <li class="list-group-item"><a asp-controller="Post" asp-action="FilterPost" asp-route-country="Belgium">Pro League</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 col-lg-6" id="main">
                    @RenderBody()
                </div>

                <div class="col-lg-3" id="standings">
                    <div class="card">
                        <div class="card-header h5">
                            Standings
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-hover" style="width:100%">
                                <tr>
                                    <th>S/N</th>
                                    <th>Name</th>
                                    <th>P</th>
                                </tr>
                                <tbody>
                                    <tr>
                                        <td>1.</td>
                                        <td>Username</td>
                                        <td>9</td>
                                    </tr>
                                    <tr>
                                        <td>2.</td>
                                        <td>Username</td>
                                        <td>9</td>
                                    </tr>
                                    <tr>
                                        <td>3.</td>
                                        <td>Username</td>
                                        <td>9</td>
                                    </tr>
                                    <tr>
                                        <td>4.</td>
                                        <td>Username</td>
                                        <td>9</td>
                                    </tr>
                                    <tr>
                                        <td>5.</td>
                                        <td>Username</td>
                                        <td>9</td>
                                    </tr>
                                    <tr>
                                        <td>6.</td>
                                        <td>Username</td>
                                        <td>9</td>
                                    </tr>
                                    <tr>
                                        <td>7.</td>
                                        <td>Username</td>
                                        <td>9</td>
                                    </tr>
                                    <tr>
                                        <td>8.</td>
                                        <td>Username</td>
                                        <td>9</td>
                                    </tr>
                                    <tr>
                                        <td>9.</td>
                                        <td>Username</td>
                                        <td>9</td>
                                    </tr>
                                    <tr>
                                        <td>10.</td>
                                        <td>Username</td>
                                        <td>9</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - _9jaTips.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    @*</div>*@
</body>
</html>
